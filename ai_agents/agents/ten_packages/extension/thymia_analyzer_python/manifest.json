{
  "type": "extension",
  "name": "thymia_analyzer_python",
  "version": "0.2.0",
  "dependencies": [
    {
      "type": "system",
      "name": "ten_runtime_python",
      "version": "0.11"
    }
  ],
  "package": {
    "include": [
      "manifest.json",
      "property.json",
      "BUILD.gn",
      "**.tent",
      "**.py",
      "README.md"
    ]
  },
  "api": {
    "property": {
      "properties": {
        "api_key": {
          "type": "string"
        },
        "ws_url": {
          "type": "string"
        },
        "biomarkers": {
          "type": "string"
        },
        "policies": {
          "type": "string"
        },
        "forward_transcripts": {
          "type": "bool"
        },
        "stream_agent_audio": {
          "type": "bool"
        },
        "auto_reconnect": {
          "type": "bool"
        }
      }
    },
    "audio_frame_in": [
      {
        "name": "pcm_frame"
      }
    ],
    "cmd_in": [
      {
        "name": "tool_call",
        "property": {
          "properties": {
            "name": {
              "type": "string"
            },
            "args": {
              "type": "string"
            }
          },
          "required": [
            "name"
          ]
        }
      }
    ],
    "cmd_out": [
      {
        "name": "tool_register",
        "property": {
          "properties": {
            "tool": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "parameters": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {}
                  }
                }
              },
              "required": [
                "name",
                "description",
                "parameters"
              ]
            }
          }
        },
        "result": {
          "property": {
            "properties": {
              "response": {
                "type": "string"
              }
            }
          }
        }
      }
    ],
    "data_out": [
      {
        "name": "text_data"
      }
    ]
  }
}
