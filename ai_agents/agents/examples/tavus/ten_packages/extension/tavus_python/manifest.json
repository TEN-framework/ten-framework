{
  "type": "extension",
  "name": "tavus_python",
  "version": "0.1.0",
  "dependencies": [
    {
      "type": "system",
      "name": "ten_runtime_python",
      "version": "0.11"
    },
    {
      "type": "system",
      "name": "ten_ai_base",
      "version": "0.7"
    }
  ],
  "package": {
    "include": [
      "manifest.json",
      "property.json",
      "**.py",
      "README.md"
    ]
  },
  "api": {
    "property": {
      "properties": {
        "tavus_api_key": {
          "type": "string"
        },
        "persona_id": {
          "type": "string"
        },
        "replica_id": {
          "type": "string"
        },
        "conversation_name": {
          "type": "string"
        },
        "max_call_duration": {
          "type": "int64"
        },
        "enable_recording": {
          "type": "bool"
        },
        "language": {
          "type": "string"
        },
        "auto_create_persona": {
          "type": "bool"
        },
        "persona_name": {
          "type": "string"
        },
        "system_prompt": {
          "type": "string"
        },
        "context": {
          "type": "string"
        },
        "enable_perception": {
          "type": "bool"
        },
        "perception_model": {
          "type": "string"
        },
        "enable_smart_turn_detection": {
          "type": "bool"
        },
        "auto_start_on_boot": {
          "type": "bool"
        },
        "llm_provider": {
          "type": "string"
        },
        "llm_model": {
          "type": "string"
        },
        "llm_base_url": {
          "type": "string"
        },
        "llm_api_key": {
          "type": "string"
        },
        "tts_provider": {
          "type": "string"
        },
        "tts_voice_id": {
          "type": "string"
        }
      }
    },
    "cmd_in": [
      {
        "name": "on_user_joined"
      },
      {
        "name": "on_user_left"
      },
      {
        "name": "start_conversation"
      },
      {
        "name": "end_conversation"
      }
    ],
    "data_out": [
      {
        "name": "tavus_persona_created"
      },
      {
        "name": "tavus_conversation_created"
      }
    ]
  }
}
