{
  "type": "extension",
  "name": "tavus_python",
  "version": "0.1.0",
  "dependencies": [
    {
      "type": "system",
      "name": "ten_runtime_python",
      "version": "0.11"
    },
    {
      "type": "system",
      "name": "ten_ai_base",
      "version": "0.7"
    }
  ],
  "package": {
    "include": [
      "manifest.json",
      "property.json",
      "**.py",
      "README.md"
    ]
  },
  "api": {
    "property": {
      "properties": {
        "tavus_api_key": {
          "type": "string",
          "description": "Tavus API key from platform.tavus.io/api-keys"
        },
        "persona_id": {
          "type": "string",
          "description": "Tavus persona ID for conversation behavior. Leave empty if auto_create_persona is true"
        },
        "replica_id": {
          "type": "string",
          "description": "Tavus replica ID for the AI avatar"
        },
        "conversation_name": {
          "type": "string",
          "description": "Name for the conversation"
        },
        "max_call_duration": {
          "type": "int64",
          "description": "Maximum call duration in seconds"
        },
        "enable_recording": {
          "type": "bool",
          "description": "Enable conversation recording"
        },
        "language": {
          "type": "string",
          "description": "Conversation language (e.g., 'en', 'es', 'multilingual')"
        },
        "auto_create_persona": {
          "type": "bool",
          "description": "Automatically create a persona on startup using the full pipeline configuration"
        },
        "persona_name": {
          "type": "string",
          "description": "Name for the auto-created persona"
        },
        "system_prompt": {
          "type": "string",
          "description": "System prompt for the persona's behavior"
        },
        "context": {
          "type": "string",
          "description": "Additional context for the persona"
        },
        "enable_perception": {
          "type": "bool",
          "description": "Enable perception layer (screen sharing capabilities)"
        },
        "perception_model": {
          "type": "string",
          "description": "Perception model to use (default: raven-0)"
        },
        "enable_smart_turn_detection": {
          "type": "bool",
          "description": "Enable smart turn detection in STT layer"
        },
        "llm_provider": {
          "type": "string",
          "description": "LLM provider (e.g., openai, anthropic, custom)"
        },
        "llm_model": {
          "type": "string",
          "description": "LLM model name"
        },
        "llm_base_url": {
          "type": "string",
          "description": "Base URL for custom LLM provider"
        },
        "llm_api_key": {
          "type": "string",
          "description": "API key for LLM provider"
        },
        "tts_provider": {
          "type": "string",
          "description": "TTS provider name"
        },
        "tts_voice_id": {
          "type": "string",
          "description": "TTS voice ID"
        }
      }
    },
    "cmd_in": [
      {
        "name": "on_user_joined",
        "description": "User joined the conversation"
      },
      {
        "name": "on_user_left",
        "description": "User left the conversation"
      },
      {
        "name": "start_conversation",
        "description": "Start a Tavus conversation"
      },
      {
        "name": "end_conversation",
        "description": "End the Tavus conversation"
      }
    ],
    "data_out": [
      {
        "name": "tavus_persona_created",
        "description": "Persona created successfully"
      },
      {
        "name": "tavus_conversation_created",
        "description": "Conversation created with URL"
      }
    ]
  }
}
