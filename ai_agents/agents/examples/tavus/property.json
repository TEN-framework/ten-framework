{
  "ten": {
    "predefined_graphs": [
      {
        "name": "tavus_conversation",
        "auto_start": true,
        "graph": {
          "nodes": [
            {
              "type": "extension",
              "name": "agora_rtc",
              "addon": "agora_rtc",
              "extension_group": "default",
              "property": {
                "app_id": "${env:AGORA_APP_ID}",
                "app_certificate": "${env:AGORA_APP_CERTIFICATE|}",
                "channel": "tavus_conversation",
                "stream_id": 1234,
                "remote_stream_id": 123,
                "subscribe_audio": true,
                "subscribe_video": true,
                "publish_audio": true,
                "publish_video": true,
                "publish_data": true
              }
            },
            {
              "type": "extension",
              "name": "tavus_control",
              "addon": "tavus_python",
              "extension_group": "control",
              "property": {
                "tavus_api_key": "${env:TAVUS_API_KEY}",
                "persona_id": "${env:TAVUS_PERSONA_ID}",
                "replica_id": "${env:TAVUS_REPLICA_ID}",
                "conversation_name": "TEN Agent Conversation",
                "max_call_duration": 3600,
                "enable_recording": false,
                "language": "en"
              }
            }
          ],
          "connections": [
            {
              "extension": "tavus_control",
              "cmd": [
                {
                  "names": [
                    "on_user_joined",
                    "on_user_left"
                  ],
                  "source": [
                    {
                      "extension": "agora_rtc"
                    }
                  ]
                }
              ],
              "video_frame": [
                {
                  "name": "video_frame",
                  "source": [
                    {
                      "extension": "agora_rtc"
                    }
                  ]
                }
              ],
              "audio_frame": [
                {
                  "name": "pcm_frame",
                  "source": [
                    {
                      "extension": "agora_rtc"
                    }
                  ]
                }
              ]
            },
            {
              "extension": "agora_rtc",
              "video_frame": [
                {
                  "name": "video_frame",
                  "source": [
                    {
                      "extension": "tavus_control"
                    }
                  ]
                }
              ],
              "audio_frame": [
                {
                  "name": "pcm_frame",
                  "source": [
                    {
                      "extension": "tavus_control"
                    }
                  ]
                }
              ],
              "data": [
                {
                  "name": "data",
                  "source": [
                    {
                      "extension": "tavus_control"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
    "log": {
      "handlers": [
        {
          "matchers": [
            {
              "level": "info"
            }
          ],
          "formatter": {
            "type": "plain",
            "colored": true
          },
          "emitter": {
            "type": "console",
            "config": {
              "stream": "stdout"
            }
          }
        }
      ]
    }
  }
}
