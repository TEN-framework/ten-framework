            "properties": {
              "type": {
                "const": "object"
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "required": [
              "properties"
            ],
            "not": {
              "required": [
                "items"
              ]
            }
          }
        },
        {
          "if": {
            "not": {
              "properties": {
                "type": {
                  "const": "array"
                }
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "not": {
              "required": [
                "items"
              ]
            }
          }
        },
        {
