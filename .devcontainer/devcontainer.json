{
  "name": "ten_framework",
  "image": "ghcr.io/ten-framework/ten_agent_build:0.7.3",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-vscode.cpptools"
      ]
    }
  },
  "workspaceMount": "source=${localWorkspaceFolder}/agents,target=/workspace,type=bind",
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=/workspace/.git,type=bind"
  ],
  "forwardPorts": [
    3000,
    8080,
    49483,
    49484
  ],
  "portsAttributes": {
    "3000": { "label": "Playground UI" },
    "8080": { "label": "Playground Backend" },
    "49483": { "label": "TEN Manager" },
    "49484": {}
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  }
}